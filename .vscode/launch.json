{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Pico2 Debug",
      "type": "cortex-debug",
      "request": "launch",
      "servertype": "openocd",
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/pico_firmware/build/pico_spindle_controller.elf",
      "configFiles": [
        "interface/cmsis-dap.cfg",
        "target/rp2350.cfg"
      ],
      "svdFile": "${env:PICO_SDK_PATH}/src/rp2350/hardware_regs/rp2350.svd",
      "runToEntryPoint": "main",
      "showDevDebugOutput": "raw"
    },
    {
      "name": "Debug G-code Interface",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/pi_zero/test_gcode_interface.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/pi_zero"
    },
    {
      "name": "Debug Spindle Test",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/pi_zero/test_spindle.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/pi_zero"
    },
    {
      "name": "Debug Klipper Architecture",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/pi_zero/test_klipper_architecture.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/pi_zero"
    }
  ]
}